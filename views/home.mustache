<section class="container home-container">
  <h1 class="welcome">Hey there, {{user}}!</h1>
  <form class="form-group gab-form" action="/gab/new" method="post">
    <textarea name="post" value="" placeholder="New Gab" cols="30"></textarea>
    <p class="char">(140 characters max)</p>
    <input class="form-control btn btn-primary new-submit" type="submit" name="newPost" value="Gab it!">
  </form>
</section>

<section class="container post-container">
<h3>Recent Gabs</h3>
{{#posts}}
<div class="container gab-container">
  <ul class="list-unstyled gab-list">
    <li class="gab-post">{{post}}</li>
    <li>By: {{userName}}</li>
    <li>Gabbed: {{posted}}</li>
    <li>Likes: {{likeCount}}</li>
  </ul>
  <ul class="list-unstyled gab-box-form"
    {{#canLike}}
    <li><form class="form-inline" action="/gab/like" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="like" value="Like" class="form-control btn btn-primary like-btn">
    </form></li>
    {{/canLike}}
    {{^canLike}}
    <li><form class="form-inline" action="/gab/delete" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="delete" value="Delete Gab" class="form-control btn btn-primary like-btn">
    </form></li>
    {{/canLike}}
    <li><form class="form-inline" action="/gab/viewGab/:gabId" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="view" value="View Gab" class="form-control btn btn-primary like-btn">
    </form></li>
  </ul>
</div>
{{/posts}}
</section>
