<section class="container home-container">
  <h1>Hey there, {{user}}!</h1>
  <form class="form-group" action="/gab/new" method="post">
    <textarea name="post" value="" placeholder="New Gab" cols="30"></textarea>
    <input class="form-control btn btn-primary" type="submit" name="newPost" value="Gab it!">
  </form>
</section>

<section class="container post-container">
<h3>Recent Gabs</h3>
{{#posts}}
<div class="container">
  <ul class="list-unstyled">
    <li>{{post}}</li>
    <li>By: {{userName}}</li>
    <li>On: {{createdAt}}</li>
    <li>Likes: {{likeCount}}</li>
    {{#canLike}}
    <li><form class="form-inline" action="/gab/like" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="like" value="Like" class="form-control btn btn-primary">
    </form></li>
    {{/canLike}}
    {{^canLike}}
    <li><form class="form-inline" action="/gab/delete" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="delete" value="Delete Gab" class="form-control btn btn-primary">
    </form></li>
    {{/canLike}}
    <li><form class="form-inline" action="/gab/viewGab/:gabId" method="post">
      <input type="hidden" name="id" value="{{id}}">
      <input type="submit" name="view" value="View Gab" class="form-control btn btn-primary">
    </form></li>
  </ul>
</div>
{{/posts}}
</section>
